{
	"name": "hsimah-services/wp-graphql-facetwp",
	"description": "WPGraphQL integration for FacetWP",
	"type": "wordpress-plugin",
	"license": "GPL-3.0-or-later",
	"authors": [
		{
			"name": "Hamish Blake",
			"email": "hsimah.services@gmail.com"
		}
	],
	"support": {
		"issues": "https://github.com/hsimah-services/wp-graphql-facetwp/issues",
		"source": "https://github.com/hsimah-services/wp-graphql-facetwp"
	},
	"config": {
		"platform": {
			"php": "7.1"
		},
		"process-timeout": 0,
		"optimize-autoloader": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"require": {
		"php": "^7.1||^8.0"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
		"squizlabs/php_codesniffer": "^3.7",
		"automattic/vipwpcs": "^2.3",
		"wp-coding-standards/wpcs": "^2.3",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"poolshark/wp-graphql-stubs": "^0.0.2"
	},
	"scripts": {
		"lint": "vendor/bin/phpcs",
		"phpcs-i": [
			"php ./vendor/bin/phpcs -i"
		],
		"check-cs": [
			"php ./vendor/bin/phpcs src"
		],
		"fix-cs": [
			"php ./vendor/bin/phpcbf src"
		]
	},
	"archive": {
		"name": "wp-graphql-facetwp",
		"exclude": [
			"/.*",
			"!.wordpress-org",
			"bin",
			"docker",
			"docs",
			"phpstan",
			"plugin-build",
			"tests",
			"!vendor",
			"/codeception.dist.yml",
			"/codeception.yml",
			"/composer.json",
			"/composer.lock",
			"/docker-compose.yml",
			"/phpstan.neon.dist",
			"/phpunit.xml.dist",
			"/README.md"
		]
	}
}
